{
  "name": "playnite-viewer",
  "private": true,
  "version": "1.1.5",
  "workspaces": [
    "web",
    "api",
    "scripts"
  ],
  "scripts": {
    "install:all": "npm i --workspaces --include-workspace-root",
    "lint": "npm -ws --if-present run lint",
    "test": "npm -ws --if-present run test",
    "up": "node scripts/up.js",
    "clean": "node scripts/clean.js",
    "codebase": "node scripts/codebase.js",
    "build:ext": "node scripts/build-ext.js",
    "version:set": "node scripts/set-version.js",
    "postbump": "npm run build",
    "commit": "cz",
    "build": "npm run version:set && npm -ws --if-present run build && npm run build:ext && npm run codebase",
    "push": "node scripts/git-push.js",
    "release": "node scripts/docker-release.js"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "standard-version": "^9.5.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
